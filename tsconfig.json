{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["vitest/globals"]
  },
  "include": [
    "bin",
    "src",
    "__tests__"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
